<div id="minicart"<: if (!$local.cart.count) { ' class="hidden"' | raw } :>>
  <a href="<: $local.checkout_base_url :>">
    <label for="minicart-quantity"><: l('Count') :></label><span id="minicart-quantity"><: $local.cart.quantity :></span>
    <label for="minicart-total"><: l('Total') :></label><span id="minicart-total"><: $local.cart.total :></span>
  </a>
</div>
